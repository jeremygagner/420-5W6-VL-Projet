@{
    <div class="signin_div">
        <form class="signin" method="post" asp-controller="Account" asp-action="SigninResult">
            <label class="signin_label" for="email">Email</label>
            <input class="signin_input" type="email" name="email" />
            <label class="signin_label" for="password">Password</label>
            <input class="signin_input" type="password" name="password" />
            <div class="signin_lower">
                <button class="signin_button" type="submit">Sign In</button>
                <p class="signin_text">Don't have an account?</p>
                <a class="signin_button" asp-controller="Account" asp-action="Signup">Sign up</a>
            </div>
        </form>
    </div>
}
