@{
    @if(ViewBag.Error != null)
    {
        <script>alert("@ViewBag.Error");</script>
    }
    <div class="signup_div">
        <form class="signup" method="post" asp-controller="Account" asp-action="SignupResult">
            <label class="signup_label" for="username">Username</label>
            <input required class="signup_input" type="text" name="username" />
            <label class="signup_label" for="email">Email</label>
            <input required class="signup_input" type="email" name="email" />
            <label class="signup_label" for="password">Password</label>
            <input required class="signup_input" type="password" name="password" />
            <label class="signup_label" for="confirm_password">Confirm Password</label>
            <input required class="signup_input" type="password" name="confirm_password" />
            <div class="signup_lower">
                <button class="landing_button" type="submit">Sign Up</button>
                <p class="signup_lower_or">OR</p>
                <div class="signup_lower_right">
                    <p class="signup_lower_right_text">Already have an account?</p>
                    <a class="signup_button" asp-controller="Account" asp-action="Signin">Sign in</a>
                </div>
            </div>
        </form>
    </div>
}
