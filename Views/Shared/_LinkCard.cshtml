@{
    @model Link
    <span class="link">
        <a class="link_a" asp-controller="Link" asp-action="ALink" asp-route-uid=@ViewBag.Uid asp-route-lid=@Model.Lid>
            <span class="infos">
                <span class="time">
                    @Model.Date
                </span>
                <span class="description">
                    @Model.Description
                </span>
            </span>
            <span class="media">
                <img src="@Model.Url" />
            </span>
        </a>
    </span>
}
